{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2024"],
    "module": "ESNext",
    "noEmit": true,
    "moduleResolution": "bundler",

    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedSideEffectImports": true
  },
  "include": ["./playwright.config.ts", "./tests/**/*.ts"]
}
